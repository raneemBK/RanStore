@model RanStoreOracle.Models.Item

@{
    ViewData["Title"] = "Item";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="container-xxl position-relative p-0">
    <div class="container-xxl py-5 bg-primary hero-header">
        <div class="container my-5 py-5 px-lg-5">
            <div class="row g-5 py-5">
                <div class="col-12 text-center">
                    <h1 class="text-white animated slideInDown">Add Item</h1>
                    <hr class="bg-white mx-auto mt-0" style="width: 90px;">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                            <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page">Add Item</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Contact Start -->
<div class="container-xxl py-5">
    <div class="container py-5 px-lg-5">
        <div class="wow fadeInUp" data-wow-delay="0.1s">
            <p class="section-title text-secondary justify-content-center"><span></span>Add Item<span></span></p>
            <h1 class="text-center mb-5">Add Item For Our Category</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="wow fadeInUp" data-wow-delay="0.3s">
                    <p class="text-center mb-4">The contact form is currently inactive. Get a functional and working contact form with Ajax & PHP in a few minutes. Just copy and paste the files, add a little code and you're done. <a href="https://htmlcodex.com/contact-form">Download Now</a>.</p>
                    <form asp-action="Item" method="post" enctype="multipart/form-data">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" asp-for="Name" id="name" placeholder="Your Full Name">
                                    <label for="name">Name Item</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" asp-for="Description" id="email" placeholder="Your Email">
                                    <label for="email">Description Item</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" class="form-control" asp-for="Price" id="email" placeholder="Your Email">
                                    <label for="email">Price JRD</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    @*<label asp-for="Dateofupload" class="control-label"></label>*@
                                    <input asp-for="Dateofupload" class="form-control" />
                                   @* <span asp-validation-for="Dateofupload" class="text-danger"></span>*@
                                   
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                   @* <label asp-for="ImageFile" class="control-label"></label>*@
                                    <input asp-for="ImageFile" class="form-control" />
                                    @*<span asp-validation-for="ImageFile" class="text-danger"></span>*@

                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <label for="category">Select Category</label>
                                    <select asp-for="Category" class="form-control" name="category" id="category" asp-items="ViewBag.Categories"></select>

                                </div>
                            </div>

                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Add Item </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->




