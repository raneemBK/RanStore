@model Tuple<IEnumerable<SalesItems>, IEnumerable<Sale>>
@{
    ViewData["Title"] = "Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>
<head>
    <link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />
    <style>
        .download {
            color: white;
            background-color: #171a1c;
            padding: 10px 20px;
            font-size: 1.2rem;
            border-radius: 20px;
            cursor: pointer;
            transition: 0.3s;
            margin: 40px;
        }

            .download:hover {
                background-color: white;
                color: #171a1c;
                border: 1px solid #171a1c;
            }

        .search {
            color: white;
            background-color: #171a1c;
            padding: 10px 20px;
            font-size: 1.2rem;
            border-radius: 20px;
            cursor: pointer;
            transition: 0.3s;
            margin: 10px 62px;
        }

            .search:hover {
                background-color: white;
                color: #171a1c;
                border: 1px solid #171a1c;
            }
    </style>
</head>
<body>
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Data Tables
                <small>Report</small>
            </h1>
            @* <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
            </ol>*@
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-6">
                    <form asp-action="Search" asp-controller="Admin" method="post">
                        <label for="stratDate">Start Date</label>
                        <input type="date" name="stratDate" class="form-control" />
                        <label for="endDate">End Date</label>
                        <input type="date" name="endDate" class="form-control" />
                        <input type="submit" value="Search" class="search" />
                    </form>
                </div>
            </div>
            <button class="download" onclick="downloadAsPDF()">Download a report as PDF</button>
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Report Data Table</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            Customer First Name
                                        </th>
                                        <th>
                                            Customer Last Name
                                        </th>
                                        <th>
                                            Item Name
                                        </th>
                                        <th>
                                            Quantity
                                        </th>
                                        <th>
                                            Price
                                        </th>
                                        <th>
                                            Date Of Sale
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Item2)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.User.Fname)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.User.Lname)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Quantity)
                                            </td>
                                            <td>
                                                @(item.Totalprice)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Dateofsale)
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td>Totat Quantity</td>
                                        <td>@ViewBag.TotalQuantity</td>
                                    </tr>
                                    <tr>
                                        <td>Totat Price</td>
                                        <td>@ViewBag.TotalPrice</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->


                </div><!-- /.col -->
            </div><!-- /.row -->
        </section><!-- /.content -->
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.js"></script>
    <script>
        function downloadAsPDF() {
            const element = document.getElementById("example2");

            html2pdf()
                .from(element)
                .save("table.pdf");
        }
    </script>
</body>
</html>



